clear;
clc;

file_path = '../img/';
file_name = 'butterfly@la.jpg';

sigma0 = 1;
total_num = 5;
% scale_factor = 1; % ฑ฿ิต
scale_ratio = 2;
threshold = 0.005;

img = imread([file_path file_name]);
[rows, cols, radiuses] = LoGDetector(img, sigma0, total_num, scale_ratio, threshold);

FeaturePointsVisualization(img, rows, cols, radiuses);
